{
  "name": "server",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:dbpush": "prisma db push",
    "prisma:seed": "prisma db seed",
    "test": "vitest --run",
    "test:unit": "vitest run --dir test/unit --reporter=dot",
    "test:integration": "vitest run --dir test/integration --reporter=dot",
    "test:e2e": "vitest run --dir test/e2e --reporter=dot"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.14",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/ui": "^3.2.4",
    "prisma": "^5.18.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  }
}